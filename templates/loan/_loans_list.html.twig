<table class="table table-dark">
    <thead>
        <tr>
            <th>Book</th>
            <th>Borrower</th>
            <th>Id card</th>
            <th>Phone number</th>
            <th>Loan date</th>
            <th>Return date</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    {% for loan in loans %}
        <tr>
            <td>{{ loan.book.title }}</td>
            <td>{{ loan.name }}</td>
            <td>{{ loan.idCard }}</td>
            <td>{{ loan.phoneNumber }}</td>
            <td>{{ loan.loanDate ? loan.loanDate|date('d-m-Y H:i:s') : '' }}</td>
            <td>{{ loan.returnDate ? loan.returnDate|date('d-m-Y H:i:s') : '' }}</td>
            <td>
                {% if loan.returnDate is same as(null) %}
                    <a class="btn btn-outline-light btn-sm" href="{{ path('loan_return', {'id': loan.id}) }}">return</a>
                {% endif %}
            </td>
        </tr>
    {% else %}
        <tr>
            <td colspan="7">no records found</td>
        </tr>
    {% endfor %}
    </tbody>
</table>