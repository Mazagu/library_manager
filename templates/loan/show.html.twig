{% extends 'base.html.twig' %}

{% block title %}Loan{% endblock %}

{% block body %}
    <h1>Loan</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ loan.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ loan.name }}</td>
            </tr>
            <tr>
                <th>Id_card</th>
                <td>{{ loan.idCard }}</td>
            </tr>
            <tr>
                <th>Phone_number</th>
                <td>{{ loan.phoneNumber }}</td>
            </tr>
            <tr>
                <th>Loan_date</th>
                <td>{{ loan.loanDate ? loan.loanDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Return_date</th>
                <td>{{ loan.returnDate ? loan.returnDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('loan_index') }}">back to list</a>

    <a href="{{ path('loan_edit', {'id': loan.id}) }}">edit</a>

    {{ include('loan/_delete_form.html.twig') }}
{% endblock %}
